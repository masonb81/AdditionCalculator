<script type="text/javascript">
    function AddNumbers() {
            var num1 = document.getElementById('txtNumber1').value;
            var num2 = document.getElementById('txtNumber2').value;

            var answer = Number(num1) + Number(num2);

            document.getElementById('answer').innerText = 'Answer: ' + answer;
        }
</script>

<html>
<body>
    <form method="post" name="calculatorForm">
        <fieldset>
            <legend>Reasonably High Tech Addition Calculator</legend>
            <div>
                <label for="txtNumber1">First Number</label>
                <input type="text" id="txtNumber1" name="txtNumber1" value="" />
            </div>
            <div>
                <label for="txtNumber2">Second Number</label>
                <input type="text" id="txtNumber2" name="txtNumber2" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="button" value="Calculate" class="submit" onclick="AddNumbers();" />
            </div>
            <br />
            <br />
            <div id="answer">Answer will be displayed here</div>
        </fieldset>
    </form>
</body>
</html>